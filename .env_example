# Environment Variables Example
# Copy this file to .env and update values as needed

# Mnemonic for wallet generation (REQUIRED)
MNEMONIC="ripple scissors kick mammal hire column oak again sun offer wealth tomorrow wagon turn fatal"

# Database Configuration
DATABASE_URL_USER_VERIFICATION="postgresql+asyncpg://postgres:password@localhost:5432/user_verification_db"
DATABASE_URL_WALLET="postgresql+asyncpg://postgres:password@localhost:5432/wallet_service_db"

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS="localhost:9092"

# User Verification Service Settings
MAX_DOCUMENT_SIZE_MB=10
VERIFICATION_DELAY_SECONDS=3.0
MAX_CONCURRENT_VERIFICATIONS=100

# Wallet Service Settings
MAX_CONCURRENT_GENERATIONS=50
CACHE_TTL_SECONDS=3600

# Optional: Mnemonic Encryption
MNEMONIC_ENCRYPTED=false
ENCRYPTION_KEY=""

# Development Settings
DEBUG=false
LOG_LEVEL="INFO" 